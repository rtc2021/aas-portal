{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aas-portal.com/schemas/ChatResponse.json",
  "title": "ChatResponse",
  "description": "Structured response from /v1/chat and /v1/diagnose endpoints",
  "type": "object",
  "required": ["response_text"],
  "properties": {
    "response_text": {
      "type": "string",
      "description": "Natural language response text"
    },
    "diagnosis": {
      "$ref": "#/definitions/DiagnosisBlock",
      "description": "Structured diagnosis if applicable"
    },
    "checklist": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ChecklistItem"
      },
      "description": "Troubleshooting steps"
    },
    "parts_needed": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/PartNeeded"
      },
      "description": "Parts that may be needed"
    },
    "sources": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Source"
      },
      "description": "Citations for the response"
    }
  },
  "definitions": {
    "DiagnosisBlock": {
      "type": "object",
      "required": ["likely_cause", "confidence", "category"],
      "properties": {
        "likely_cause": {
          "type": "string",
          "description": "Most probable root cause"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score (0-1)"
        },
        "category": {
          "type": "string",
          "description": "Issue category (e.g., electrical, mechanical, sensor)"
        }
      }
    },
    "ChecklistItem": {
      "type": "object",
      "required": ["step", "action"],
      "properties": {
        "step": {
          "type": "integer",
          "minimum": 1,
          "description": "Step number"
        },
        "action": {
          "type": "string",
          "description": "Action to perform"
        },
        "manual_ref": {
          "type": "object",
          "properties": {
            "manual_id": {
              "type": "string"
            },
            "page": {
              "type": "integer"
            }
          },
          "description": "Reference to manual page"
        }
      }
    },
    "PartNeeded": {
      "type": "object",
      "required": ["part_number", "description"],
      "properties": {
        "part_number": {
          "type": "string",
          "description": "Part number or SKU"
        },
        "description": {
          "type": "string",
          "description": "Part description"
        },
        "quantity": {
          "type": "integer",
          "minimum": 1,
          "default": 1,
          "description": "Quantity needed"
        }
      }
    },
    "Source": {
      "type": "object",
      "required": ["type", "relevance"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["playbook", "manual"],
          "description": "Source type"
        },
        "id": {
          "type": "string",
          "description": "Playbook ID if type is playbook"
        },
        "manual_id": {
          "type": "string",
          "description": "Manual ID if type is manual"
        },
        "page": {
          "type": "integer",
          "description": "Page number for manual references"
        },
        "relevance": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Relevance score (0-1)"
        }
      }
    }
  }
}
